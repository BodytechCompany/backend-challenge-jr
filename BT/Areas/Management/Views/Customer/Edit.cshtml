@model BT.Areas.Management.ViewModel.ClienteViewModel


    @{
        ViewBag.Title = "Edit";
        Layout = "~/Areas/Management/Views/Shared/_Management_Layout.cshtml";

    }

    <h2>Edit </h2>

    <div align="center" width="500px">
        @using (Html.BeginForm("Edit", "Customer", FormMethod.Post))
        {
            <table class="table" width="400px" cellpadding="20">
                <tr class="btn-default">
                    <td>
                        @Html.LabelFor(model => model.cliente.clie_nm_nome)
                    </td>

                    <td>
                        @Html.TextBoxFor(model => model.cliente.clie_nm_nome)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.cliente.clie_nr_matricula)
                    </td>

                    <td>
                        @Html.TextBoxFor(model => model.cliente.clie_nr_matricula)
                    </td>
                </tr>
                <tr>
                    <td></td>

                    <td>
                        <input type="submit" value="Save" class="btn btn-default" />
                        <a class="btn btn-danger"
                           href="@Url.Action("Index","Customer")">Back</a>
                        @Html.HiddenFor(model => model.cliente.clie_id)
                    </td>
                </tr>
            </table>
        }
    </div>
